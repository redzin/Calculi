<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorButtonBackgroundSecondary">
  
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical" >
    
    <TextView
      android:id="@+id/keypadDivision"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_divide"
      android:textSize="30dip"
      android:textColor="@color/colorButtonTextSecondary" 
      android:padding="10dp"/>
    
    <TextView
      android:id="@+id/keypadMultiplication"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_multiply"
      android:textSize="30dip"
      android:textColor="@color/colorButtonTextSecondary" 
      android:padding="10dp"/>
    
    <TextView
      android:id="@+id/keypadSubtraction"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_subtract"
      android:textSize="30dip"
      android:textColor="@color/colorButtonTextSecondary" 
      android:padding="10dp"/>
    
    <TextView
      android:id="@+id/keypadAddition"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_add"
      android:textSize="30dip"
      android:textColor="@color/colorButtonTextSecondary" 
      android:padding="10dp"/>
    
  </LinearLayout>
  
  
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical" >
    
    <TextView
      android:id="@+id/keypadClear"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_clear"
      android:textSize="30dip"
      android:textColor="@color/colorButtonTextSecondary" 
      android:padding="10dp"/>
    
    <TextView
      android:id="@+id/keypadDelete"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_delete"
      android:textSize="30dip"
      android:textColor="@color/colorButtonTextSecondary" 
      android:padding="10dp"/>
        
    <TextView
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center|center"
      android:textSize="30dip"
      android:textColor="@color/colorButtonTextSecondary" 
      android:padding="10dp"/>

    <TextView
      android:id="@+id/keypadEnter"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_enter"
      android:textSize="40dip"
      android:textColor="@color/colorButtonTextTertiary"
      android:background="@color/colorButtonBackgroundTertiary" 
      android:padding="10dp"/>
    
  </LinearLayout>
  
</LinearLayout>

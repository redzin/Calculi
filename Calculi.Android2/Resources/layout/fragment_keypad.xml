
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center"
    android:layout_weight="1"
    android:orientation="horizontal" >
    
    <TextView
      android:id="@+id/keypadSeven"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_7"
      android:textSize="24dp"
      android:padding="10dp" />

    <TextView
      android:id="@+id/keypadEight"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_8"
      android:textSize="24dp"
      android:padding="10dp" />

    <TextView
      android:id="@+id/keypadNine"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_9"
      android:textSize="24dp"
      android:padding="10dp" />

  </LinearLayout>

  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center"
    android:layout_weight="1"
    android:orientation="horizontal" >
    
    <TextView
      android:id="@+id/keypadFour"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_4"
      android:textSize="24dp"
      android:padding="10dp" />

    <TextView
      android:id="@+id/keypadFive"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_5"
      android:textSize="24dp"
      android:padding="10dp" />

    <TextView
      android:id="@+id/keypadSix"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_6"
      android:textSize="24dp"
      android:padding="10dp" />

  </LinearLayout>

  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center"
    android:layout_weight="1"
    android:orientation="horizontal">
    
    <TextView
      android:id="@+id/keypadOne"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_1"
      android:textSize="24dp"
      android:padding="10dp" />

    <TextView
      android:id="@+id/keypadTwo"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_2"
      android:textSize="24dp"
      android:padding="10dp" />

    <TextView
      android:id="@+id/keypadThree"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_3"
      android:textSize="24dp"
      android:padding="10dp" />

  </LinearLayout>

  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center"
    android:layout_weight="1"
    android:orientation="horizontal" >
    
    <TextView
      android:id="@+id/keypadZero"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_0"
      android:textSize="24dp"
      android:padding="10dp" />

    <TextView
      android:id="@+id/keypadPoint"
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:text="@string/button_point"
      android:textSize="24dp"
      android:padding="10dp" />
        
    <TextView
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|center"
      android:textSize="24dp"
      android:padding="10dp" />

  </LinearLayout>
</LinearLayout>
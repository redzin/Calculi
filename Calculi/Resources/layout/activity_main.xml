
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme.Container">
    

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.75">
        
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:windowSoftInputMode="stateHidden"
            android:id="@+id/HistoryRecyclerView"/>

    </FrameLayout>
    
    
    <FrameLayout
        android:id="@+id/InputFrameLayout"
        style="@style/AppTheme.InputTextContainer"
        android:layout_weight="0">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/InputPreview"
                style="@style/AppTheme.InputTextPreview"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/Input"
                style="@style/AppTheme.InputText"
                android:windowSoftInputMode="stateHidden"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </FrameLayout>
    

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:columnCount="5"
        android:windowSoftInputMode="stateHidden">

        <Button
            android:id="@+id/button0"
            style="@style/AppTheme.CalcButtonWideNumeric"
            android:layout_column="0"
            android:layout_row="6"
            android:text="@string/button_0" />
            
        <Button
            android:id="@+id/buttonPoint"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="2"
            android:layout_row="6"
            android:text="@string/button_point" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/AppTheme.CalcButton"
            android:layout_column="3"
            android:layout_row="6"
            android:text="@string/button_add" />

        <Button
            android:id="@+id/buttonEnter"
            style="@style/AppTheme.CalcButtonTallBlue"
            android:layout_column="4"
            android:layout_row="5"
            android:text="@string/button_enter" />

        <Button
            android:id="@+id/button1"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="0"
            android:layout_row="5"
            android:text="@string/button_1" />

        <Button
            android:id="@+id/button2"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="1"
            android:layout_row="5"
            android:text="@string/button_2" />
        
        <Button
            android:id="@+id/button3"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="2"
            android:layout_row="5"
            android:text="@string/button_3" />
            
        <Button
            android:id="@+id/buttonSubtract"
            style="@style/AppTheme.CalcButton"
            android:layout_column="3"
            android:layout_row="5"
            android:text="@string/button_subtract" />

        <Button
            android:id="@+id/button4"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="0"
            android:layout_row="4"
            android:text="@string/button_4" />
            
        <Button
            android:id="@+id/button5"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/button_5" />

        <Button
            android:id="@+id/button6"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="2"
            android:layout_row="4"
            android:text="@string/button_6" />
            
        <Button
            android:id="@+id/buttonMultiply"
            style="@style/AppTheme.CalcButton"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/button_multiply" />
            
        <Button
            android:id="@+id/buttonAnswer"
            style="@style/AppTheme.CalcButton"
            android:layout_column="4"
            android:layout_row="4"
            android:text="@string/button_answer" />

        <Button
            android:id="@+id/button7"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/button_7" />

        <Button
            android:id="@+id/button8"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="1"
            android:layout_row="3"
            android:text="@string/button_8" />

        <Button
            android:id="@+id/button9"
            style="@style/AppTheme.CalcButtonNumeric"
            android:layout_column="2"
            android:layout_row="3"
            android:text="@string/button_9" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/AppTheme.CalcButton"
            android:layout_column="3"
            android:layout_row="3"
            android:text="@string/button_divide" />

        <Button
            android:id="@+id/buttonSquareRoot"
            style="@style/AppTheme.CalcButton"
            android:layout_column="4"
            android:layout_row="3"
            android:text="@string/button_square_root" />

        <Button
            android:id="@+id/buttonRightParenthesis"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/button_right_parenthesis" />

        <Button
            android:id="@+id/buttonLeftArrow"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="2"
            android:layout_row="0"
            android:text="@string/button_left_arrow" />

        <Button
            android:id="@+id/buttonRightArrow"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="3"
            android:layout_row="0"
            android:text="@string/button_right_arrow" />

        <Button
            android:id="@+id/buttonLeftParenthesis"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/button_left_parenthesis" />

        <Button
            android:id="@+id/buttonModulo"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="4"
            android:layout_row="2"
            android:text="@string/button_modulo" />
            
        <Button
            android:id="@+id/buttonSquare"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="2"
            android:layout_row="2"
            android:text="@string/button_square" />

        <Button
            android:id="@+id/buttonExponential"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="1"
            android:layout_row="2"
            android:text="@string/button_exponential" />

        <Button
            android:id="@+id/buttonLn"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/button_ln" />

        <Button
            android:id="@+id/buttonLog"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/button_log" />
            
        <Button
            android:id="@+id/buttonClear"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="4"
            android:layout_row="1"
            android:text="@string/button_clear" />

        <Button
            android:id="@+id/buttonSine"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/button_sine" />

        <Button
            android:id="@+id/buttonCosine"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/button_cosine" />

        <Button
            android:id="@+id/buttonTangent"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="3"
            android:layout_row="1"
            android:text="@string/button_tangent" />

        <Button
            android:id="@+id/buttonPower"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="3"
            android:layout_row="2"
            android:text="@string/button_power" />

        <Button
            android:id="@+id/buttonDelete"
            style="@style/AppTheme.CalcButtonSpecial"
            android:layout_column="4"
            android:layout_row="0"
            android:text="@string/button_delete" />


    </GridLayout>

    
</LinearLayout>